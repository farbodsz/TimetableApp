<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/mdu_keyline_1"
    android:paddingRight="@dimen/mdu_keyline_1"
    android:paddingTop="@dimen/mdu_padding_normal"
    android:paddingBottom="@dimen/mdu_padding_normal">

    <TextView
        android:id="@+id/subject"
        android:text="Computer Science"
        android:textColor="@color/mdu_text_black"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/class_details"
        android:text="10:15 - 11:15 on Wednesday Week A \n13:10 - 15:10 on Thursday"
        android:textColor="@color/mdu_text_black_secondary"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"/>

</LinearLayout>
